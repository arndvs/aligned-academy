{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["react", "react-native", "expo-router"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["dom", "esnext"]
  },
  "files": [],
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts" ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.spec.json" }
  ]
}
